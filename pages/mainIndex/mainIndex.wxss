/* header*/
.header{background: #52d2af url('https://develop.mmmee.cn/LingMeng/resources/timeimg/wavesBg.png') bottom center no-repeat;text-align: center;position: relative;height: 164px;background-size: 100% auto;}
.headerBg{position: absolute;top: 0;width: 76px;height:46px;z-index: 1}
.header .user{display: flex;flex-direction: column;text-align: center;color: #fff;position: absolute;left: 50%;top: 40%;transform: translate(-50%,-50%)}
.header .userPortrait{width: 56px;height: 56px;border:4rpx solid #32c49d;border-radius:28px;margin:auto;margin-bottom:5px;background: #fff}
.userInfo{font-size: 36rpx;line-height: 1.2}
.userAge{position: absolute;font-size: 27rpx;right: 0;bottom: 20px;background: rgba(0,0,0,0.4);padding: 2px 32rpx;height:40px;line-height:1.5;color: #fff;border-top-left-radius: 20px;border-bottom-left-radius: 20px;text-align: right}
.switchBaby{position: absolute;left: 18rpx;top: 16px;color: #fff;border: 1px solid #fff;height: 24px;border-radius: 12px;padding: 0 10px;line-height: 24px;z-index: 2}


.navbar{display: flex;flex-direction: row;align-items: center;padding:10px 20rpx;background: #fff}
.navbar view{flex: 1;text-align: center}
.navbar .iconfont{font-size: 32px;line-height: 1.3;color:#a0a0a0}
.inviteEnter{margin-left: 5px;padding-left: 5px;position: relative}
.inviteEnter::before{content: "";display: block;width: 1px;background: #dcdcdc;position: absolute;left: 0;top: 25%;height: 50%}

.timeline{display: flex;flex-direction: column;background: #fff;margin-top: 16px;}
.timeItem{margin:16px 36rpx;position: relative}
.timeItem .imgBox{display: flex;flex-direction: row;flex-wrap: wrap}
.timeItem .imgBox image{margin-right: 4%;width:48%;height: 132px;border-radius: 3px;margin-bottom: 20rpx}
.timeItem .imgBox image:last-child,.timeItem .imgBox image:nth-child(2){margin-right: 0}
.timeItem .imgBox.imgBox2 image:last-child{width: 100%}
.itemHeader{position: relative}
.itemTitle{display: flex;flex-direction: row;justify-content: space-between;align-items: center}
.itemTitle .h3{flex: 3;overflow: hidden;text-overflow: ellipsis;white-space: nowrap}
.itemTitle .time{flex: 1;text-align: right} 
.itemInfo{margin: 8px 0;overflow : hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;}
.itemFooter{display: flex;flex-direction: row;justify-content: space-between;position: relative;align-items: center}
.itemFooter view{position: relative}
.itemFooter .itemPup{position: absolute;right: 200%;top: 0;width: 204rpx;background: rgba(0,0,0,0.6);border-radius: 3px;padding:5px 8px;opacity: 0;transform: scale(0)}
.itemFooter .itemPup:before{position: absolute;left: 100%;border:5px solid transparent;border-left-color: rgba(0,0,0,0.6);content: "";display: block;top:50%;transform: translateY(-50%)}
.itemFooter .itemPup text{flex: 1;text-align: center;color: #fff;width: 50%;display: inline-block}

.publicIcons{position: fixed;right: 36rpx;bottom:40px;z-index: 10}
.public_btn1 , .public_btn2 ,.camera{color: #fff;text-align: center;box-shadow: 0px 1px 4px rgba(0,0,0,0.26);z-index: 12}
.camera{background: rgba(46,204,113,0.9);width: 56px;height: 56px;border-radius: 28px;}
.camera .iconfont{font-size: 32px;line-height: 1.6}
.public_btn1 ,.public_btn2{position: absolute;color: #fff;width: 46px;height: 46px;border-radius: 23px;font-size: 24rpx;transform: scale(0)}
.public_btn1{background: rgba(78,196,164,0.9);bottom:68%;right:110%;z-index: 9;line-height: 1.2;box-sizing: border-box;-webkit-box-sizing: border-box;-moz-box-sizing: border-box;-o-box-sizing: border-box;padding-top:8px}
.public_btn2{background: rgba(0,160,233,0.9);bottom:120%;z-index: 9;line-height: 46px}
.pupBg{position: fixed;width: 100%;height: 100%;top: 0;left: 0;background: rgba(0,0,0,0.6);z-index: 9}