page{min-height:auto}
.editPics{margin-top: 10px;text-align: right;margin-right: 36rpx;position: absolute;right: 0;top:12px}
.editPics text{color: #fff;background: #4ec4a4;height:24px;width:108rpx;text-align: center;line-height: 24px;border-radius: 12px;font-size: 27rpx;display: inline-block}
.dayItem{background: #fff;margin-top: 10px;}
.dayItem_title{height:48px;line-height: 48px;border-bottom:1px solid #ececec;padding: 0 36rpx;color: #313131;font-size: 32rpx}
.dayItem_pics{padding: 10px 36rpx 0;display: flex;flex-direction: row;flex-wrap: wrap;}
.checkbox{position: relative;margin-bottom: 10px;width: 20%;height: 72px;margin-right: 5%;}
.checkbox image{width: 100%;height: 72px;border-radius: 5px;}
.checkbox checkbox{position: absolute;right:-5px;top:-5px;z-index: 10}
.checkbox text{position: absolute;z-index: 9;top:0;right:0;display:block;width: 20px;height: 20px;background: #ececec;border-radius: 50%;border:1px solid #3bac8d}
.checkbox text.choose{background:#3bac8d;}

.picPup{position: fixed;width: 100%;height: 100%;background: rgba(0,0,0,0.7);top:0;left:0;z-index:100;color: #fff}
.picPup_picBox{width: 100%;height: 100%;position: absolute;top: 0;left: 0}
.picPup_picBox image{width: 100%;height: 100%;}
.picPup_picTxt{padding: 20px 36rpx;position: absolute;bottom: 0;left: 0;width: 100%;background: rgba(0,0,0,0.6);}
.picPup_picTxt .title{font-size: 36rpx;margin-bottom: 5px}
.picPup_picTxt .note{margin-top: 5px;font-size: 24rpx;color: #dcdcdc;display: flex;flex-direction: row;justify-content: space-between}
.picPup .closePup{position: absolute;right: 36rpx;top:20px;width: 30px;height: 30px;border-radius: 15px;background: #fff;color: #4ec4a4;text-align: center;line-height: 30px;}
.picPup .closePup .iconfont{font-size: 20px}

.imgLoading{position: absolute;width:16px;height:16px;left:50%;top:50%;transform: translate(-50%,-50%);z-index: -1}